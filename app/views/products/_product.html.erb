<div id="<%= dom_id product %>" style="max-width: 600px; margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
  <h2 style="text-align: center; color: #333;"><%= product.name %></h2>

  <div style="margin: 20px 0;">
    <strong>Descripción:</strong>
    <p><%= product.description %></p>
  </div>

  <div style="margin: 10px 0;">
    <strong>Precio:</strong>
    <p style="color: green; font-weight: bold;">$<%= product.price %></p>
  </div>

  <div style="margin: 10px 0;">
    <strong>Categorías:</strong>
    <% if @product.categories.any? %>
      <div style="display: flex; flex-wrap: wrap; gap: 10px; margin-top: 10px;">
        <% @product.categories.each do |category| %>
          <div style="padding: 10px; border: 1px solid #ccc; border-radius: 8px; background-color: #e9e9e9; flex: 0 0 auto;">
            <%= category.name %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p>No hay categorías asignadas a este producto.</p>
    <% end %>
  </div>

  <div style="margin: 10px 0;">
    <strong>Stock:</strong>
    <p style="font-weight: bold;"><%= product.stock %></p>
  </div>
</div>

